                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="Is this the first time you play?" textAlignment="CENTER"
                                                       GridPane.rowIndex="2">
                                                    <textFill>
                                                        <LinearGradient endX="1.0">
                                                            <stops>
                                                                <Stop>
                                                                    <color>
                                                                        <Color red="0.40789473056793213"
                                                                               green="0.16510924696922302"
                                                                               blue="0.024549219757318497"/>
                                                                    </color>
                                                                </Stop>
                                                                <Stop offset="1.0">
                                                                    <color>
                                                                        <Color red="0.5921052694320679"
                                                                               green="0.2722953259944916"
                                                                               blue="0.04385964944958687"/>
                                                                    </color>
                                                                </Stop>
                                                            </stops>
                                                        </LinearGradient>
                                                    </textFill>
                                                    <font>
                                                        <Font size="28.0"/>
                                                    </font>
                                                    <GridPane.margin>
                                                        <Insets/>
                                                    </GridPane.margin>
                                                </Label>
                                                <Label alignment="CENTER" text="Insert your username"
                                                       textAlignment="CENTER">
                                                    <textFill>
                                                        <LinearGradient endX="1.0">
                                                            <stops>
                                                                <Stop>
                                                                    <color>
                                                                        <Color red="0.40789473056793213"
                                                                               green="0.16510924696922302"
                                                                               blue="0.024549219757318497"/>
                                                                    </color>
                                                                </Stop>
                                                                <Stop offset="1.0">
                                                                    <color>
                                                                        <Color red="0.5921052694320679"
                                                                               green="0.2722953259944916"
                                                                               blue="0.04385964944958687"/>
                                                                    </color>
                                                                </Stop>
                                                            </stops>
                                                        </LinearGradient>
                                                    </textFill>
                                                    <font>
                                                        <Font size="28.0"/>
                                                    </font>
                                                    <GridPane.margin>
                                                        <Insets/>
                                                    </GridPane.margin>
                                                </Label>
                                                <CheckBox fx:id="firstGame" mnemonicParsing="false"
                                                          GridPane.rowIndex="3"/>
                                                <Label fx:id="usernameError" translateX="-80.0" translateY="215.0"/>
                                                <TextField fx:id="username" prefHeight="26.0" prefWidth="308.0"
                                                           GridPane.rowIndex="1">
                                                    <GridPane.margin>
                                                        <Insets left="30.0" right="30.0"/>
                                                    </GridPane.margin>
                                                </TextField>
                                                <Label fx:id="connectionError" translateX="-80.0" translateY="185.0"/>
                                            </children>
                                        </GridPane>
                                        <Button fx:id="startButton" layoutX="414.0" layoutY="312.0"
                                                mnemonicParsing="false" onAction="#onStartButtonClicked"
                                                text="Start game"/>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Rules">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </Tab>
                        <Tab fx:id="settings" onSelectionChanged="#loadSettings" text="Settings">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <VBox layoutY="63.0" prefHeight="314.0" prefWidth="604.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="100.0"
                                                      prefWidth="200.0" spacing="15.0">
                                                    <children>
                                                        <Label fx:id="l" text="Language">
                                                            <font>
                                                                <Font size="19.0"/>
                                                            </font>
                                                        </Label>
                                                        <ComboBox fx:id="language" editable="true" prefWidth="150.0"/>
                                                        <Button fx:id="setLanguage" mnemonicParsing="false"
                                                                onAction="#changeLanguage" text="Set"/>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                                    </padding>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Credits">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </StackPane>
    </children>
