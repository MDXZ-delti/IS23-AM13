      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19">
    <children>
        <StackPane prefHeight="403.0" prefWidth="600.0">
            <children>
                <ImageView fitHeight="402.0" fitWidth="604.0" pickOnBounds="true">
                    <image>
                        <Image url="@sfondo_parquet.jpg"/>
